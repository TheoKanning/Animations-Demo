<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@+id/on"
        android:drawable="@drawable/heart_animation_28"
        android:state_checked="true" />
    <item
        android:id="@+id/off"
        android:drawable="@drawable/heart_animation_00"
        android:state_checked="false" />

    <transition
        android:drawable="@drawable/heart_animation_on"
        android:fromId="@id/off"
        android:toId="@id/on" />

</animated-selector>